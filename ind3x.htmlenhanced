<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkillFlow Academy - Master In-Demand Skills</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Military Grade Security Headers -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:;">
    <meta name="referrer" content="strict-origin-when-cross-origin">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="#" class="logo">
                <i class="fas fa-graduation-cap"></i>
                SkillFlow Academy
            </a>
            
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
            
            <div class="nav-links" id="navLinks">
                <a href="#courses">Trending Courses</a>
                <a href="#categories">Categories</a>
                <a href="#free">Free Course</a>
                <a href="#support">Support</a>
                <div class="cart-icon" id="cartIcon">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count" id="cartCount">0</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section with Masked Photo -->
    <section class="hero">
        <div class="hero-mask"></div>
        <div class="container">
            <h1>Master In-Demand Skills That Employers Want</h1>
            <p>Join 127,000+ students transforming their careers with our addictive, expert-led courses</p>
            <div class="hero-stats">
                <div class="stat">
                    <div class="stat-number">92%</div>
                    <div class="stat-label">Completion Rate</div>
                </div>
                <div class="stat">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Premium Courses</div>
                </div>
                <div class="stat">
                    <div class="stat-number">127K+</div>
                    <div class="stat-label">Students</div>
                </div>
            </div>
            <button class="cta-button" onclick="scrollToCourses()">
                <i class="fas fa-rocket"></i> Explore Trending Courses
            </button>
        </div>
    </section>

    <!-- Trust Badges -->
    <div class="container">
        <div class="trust-badges">
            <div class="trust-badge">
                <i class="fas fa-shield-alt"></i>
                <span>Military-Grade Security</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-lock"></i>
                <span>SSL Encrypted Payments</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-award"></i>
                <span>HD Quality Content</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-download"></i>
                <span>Instant Lifetime Access</span>
            </div>
        </div>
    </div>

    <!-- Course Categories -->
    <section id="categories" class="container">
        <h2 class="section-title">Explore Course Categories</h2>
        <div class="categories-grid">
            <div class="category-card" onclick="filterCourses('ai-ml')">
                <div class="category-icon">ü§ñ</div>
                <h3>AI & Machine Learning</h3>
                <p>Master AI algorithms, prompt engineering, and ML systems</p>
                <span class="course-count">12 courses</span>
            </div>
            <div class="category-card" onclick="filterCourses('marketing')">
                <div class="category-icon">üìà</div>
                <h3>Digital Marketing</h3>
                <p>Social media, SEO, content marketing, and growth hacking</p>
                <span class="course-count">15 courses</span>
            </div>
            <div class="category-card" onclick="filterCourses('development')">
                <div class="category-icon">üíª</div>
                <h3>Development</h3>
                <p>Web development, mobile apps, and software engineering</p>
                <span class="course-count">10 courses</span>
            </div>
            <div class="category-card" onclick="filterCourses('business')">
                <div class="category-icon">üíº</div>
                <h3>Business & Finance</h3>
                <p>Entrepreneurship, crypto, trading, and business automation</p>
                <span class="course-count">8 courses</span>
            </div>
            <div class="category-card" onclick="filterCourses('creative')">
                <div class="category-icon">üé®</div>
                <h3>Creative</h3>
                <p>Design, video editing, content creation, and NFTs</p>
                <span class="course-count">5 courses</span>
            </div>
        </div>
    </section>

    <!-- Trending Courses Section -->
    <section id="courses" class="container">
        <h2 class="section-title">üî• Trending Courses This Week</h2>
        <div class="courses-grid" id="coursesGrid">
            <!-- Courses loaded dynamically -->
        </div>
    </section>

    <!-- Free Course Section -->
    <section id="free" class="container">
        <h2 class="section-title">üéÅ Free Course This Month</h2>
        <div class="courses-grid">
            <div class="course-card free-course" id="freeCourseCard">
                <!-- Free course loaded dynamically -->
            </div>
        </div>
    </section>

    <!-- Support Section -->
    <section id="support" class="container">
        <h2 class="section-title">üí¨ 24/7 Support</h2>
        <div class="support-section">
            <div class="support-info">
                <h3>Get Help Anytime</h3>
                <p>Our AI assistant Bronwyn and support team are here to help you 24/7</p>
                <div class="contact-methods">
                    <div class="contact-method">
                        <i class="fas fa-robot"></i>
                        <span>AI Chat Support: Available 24/7</span>
                    </div>
                    <div class="contact-method">
                        <i class="fas fa-envelope"></i>
                        <span>Email: support@skillflow.co.za</span>
                    </div>
                    <div class="contact-method">
                        <i class="fas fa-clock"></i>
                        <span>Response Time: Under 2 hours</span>
                    </div>
                </div>
            </div>
            <div class="chatbot-widget" id="chatbotWidget">
                <div class="chatbot-header">
                    <i class="fas fa-robot"></i>
                    <span>Bronwyn - AI Support</span>
                    <button class="chatbot-toggle" onclick="toggleChatbot()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="chatbot-messages" id="chatbotMessages">
                    <div class="message bot-message">
                        Hi! I'm Bronwyn, your AI learning assistant. How can I help you today?
                    </div>
                </div>
                <div class="chatbot-input">
                    <input type="text" id="chatbotInput" placeholder="Ask me anything...">
                    <button onclick="sendChatMessage()">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>SkillFlow Academy</h3>
                    <p>Transforming careers through premium online education. Join the revolution in digital learning.</p>
                    <div class="security-badge">
                        <i class="fas fa-shield-alt"></i>
                        <span>Military-Grade Security</span>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="#courses">Trending Courses</a>
                    <a href="#categories">All Categories</a>
                    <a href="#free">Free Course</a>
                    <a href="#support">Support</a>
                </div>
                <div class="footer-section">
                    <h3>Support</h3>
                    <a href="mailto:support@skillflow.co.za">24/7 Support</a>
                    <a href="#chatbotWidget">AI Chat Support</a>
                    <a href="#">FAQ Help Center</a>
                    <!-- Refund policy removed as requested -->
                </div>
                <div class="footer-section">
                    <h3>Business</h3>
                    <a href="#">Become Instructor</a>
                    <a href="#">Affiliate Program</a>
                    <a href="#">Enterprise Solutions</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Shopping Cart -->
    <div class="cart-sidebar" id="cartSidebar">
        <div class="cart-header">
            <h3>Your Learning Cart üõí</h3>
            <button class="close-cart" onclick="toggleCart()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div id="cartItems">
            <!-- Cart items loaded dynamically -->
        </div>
        <div class="cart-total">
            Total: R<span id="cartTotal">0</span> ZAR
        </div>
        
        <!-- Payment Methods -->
        <h4 style="margin: 1.5rem 0 1rem;">Select Payment Method:</h4>
        <div class="payment-methods" id="paymentMethods">
            <div class="payment-method" onclick="selectPayment('payfast')">
                <div class="payment-icon">
                    <i class="fas fa-credit-card"></i>
                </div>
                <h4>PayFast</h4>
                <small>South Africa & Region</small>
                <div class="payment-security">
                    <i class="fas fa-lock"></i> Secure
                </div>
            </div>
            <div class="payment-method" onclick="selectPayment('stripe')">
                <div class="payment-icon">
                    <i class="fab fa-stripe"></i>
                </div>
                <h4>Stripe</h4>
                <small>Global Payments</small>
                <div class="payment-security">
                    <i class="fas fa-shield-alt"></i> Protected
                </div>
            </div>
            <div class="payment-method" onclick="selectPayment('eft')">
                <div class="payment-icon">
                    <i class="fas fa-university"></i>
                </div>
                <h4>Bank EFT</h4>
                <small>Direct Transfer</small>
                <div class="payment-security">
                    <i class="fas fa-check-circle"></i> Verified
                </div>
            </div>
        </div>
        
        <button class="checkout-button" onclick="proceedToCheckout()">
            <i class="fas fa-lock"></i> Secure Checkout
        </button>
        
        <div class="security-notice">
            <i class="fas fa-shield-alt"></i>
            <span>Military-grade encryption protects your payment</span>
        </div>
    </div>
    
    <div class="overlay" id="overlay"></div>

    <!-- Admin Login Button -->
    <div class="admin-login" onclick="openAdminLogin()">
        <i class="fas fa-cog"></i> Owner Portal
    </div>

    <!-- Subscription Target Widget -->
    <div class="target-widget" id="targetWidget">
        <div class="target-progress">
            <div class="target-label">üéØ 10K Subscribers Target</div>
            <div class="progress-bar">
                <div class="progress-fill" id="subscriberProgress"></div>
            </div>
            <div class="target-stats">
                <span id="currentSubscribers">0</span> / 10,000
            </div>
        </div>
    </div>

    <script src="scripts/security.js"></script>
    <script src="scripts/main.js"></script>
    <script src="scripts/payment.js"></script>
    <script src="scripts/chatbot.js"></script>
    <script src="scripts/target-agent.js"></script>
</body>
</html>
