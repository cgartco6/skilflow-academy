<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkillFlow Academy - Premium Online Courses</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="#" class="logo">
                <i class="fas fa-graduation-cap"></i>
                SkillFlow Academy
            </a>
            
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
            
            <div class="nav-links" id="navLinks">
                <a href="#courses">Courses</a>
                <a href="#free">Free Course</a>
                <a href="#about">About</a>
                <div class="cart-icon" id="cartIcon">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count" id="cartCount">0</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Master In-Demand Skills That Employers Want</h1>
            <p>Join 85,000+ students transforming their careers with our addictive, expert-led courses</p>
            <button class="cta-button" onclick="scrollToCourses()">
                <i class="fas fa-rocket"></i> Explore Trending Courses
            </button>
        </div>
    </section>

    <!-- Trust Badges -->
    <div class="container">
        <div class="trust-badges">
            <div class="trust-badge">
                <i class="fas fa-shield-alt"></i>
                <span>Bank-Level Security</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-lock"></i>
                <span>SSL Encrypted Payments</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-award"></i>
                <span>Premium Certified Content</span>
            </div>
            <div class="trust-badge">
                <i class="fas fa-download"></i>
                <span>Instant Lifetime Access</span>
            </div>
        </div>
    </div>

    <!-- Courses Section -->
    <section id="courses" class="container">
        <h2 class="section-title">Trending Career-Boosting Courses</h2>
        <div class="courses-grid" id="coursesGrid">
            <!-- Courses loaded dynamically -->
        </div>
    </section>

    <!-- Free Course Section -->
    <section id="free" class="container">
        <h2 class="section-title">Start Your Learning Journey Free</h2>
        <div class="courses-grid">
            <div class="course-card free-course" id="freeCourseCard">
                <!-- Free course loaded dynamically -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>SkillFlow Academy</h3>
                    <p>Transforming careers through premium online education. Join the revolution in digital learning.</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="#courses">All Courses</a>
                    <a href="#free">Free Course</a>
                    <a href="#about">About Us</a>
                    <a href="#">Success Stories</a>
                </div>
                <div class="footer-section">
                    <h3>Support</h3>
                    <a href="mailto:support@skillflow.academy">24/7 Support</a>
                    <a href="#">FAQ Help Center</a>
                    <a href="#">Refund Policy</a>
                    <a href="#">Contact Instructors</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Shopping Cart -->
    <div class="cart-sidebar" id="cartSidebar">
        <div class="cart-header">
            <h3>Your Learning Cart ðŸ›’</h3>
            <button class="close-cart" onclick="toggleCart()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div id="cartItems">
            <!-- Cart items loaded dynamically -->
        </div>
        <div class="cart-total">
            Total: R<span id="cartTotal">0</span> ZAR
        </div>
        
        <!-- Payment Methods -->
        <h4 style="margin: 1.5rem 0 1rem;">Select Payment Method:</h4>
        <div class="payment-methods" id="paymentMethods">
            <div class="payment-method" onclick="selectPayment('payfast')">
                <div class="payment-icon">
                    <i class="fas fa-credit-card"></i>
                </div>
                <h4>PayFast</h4>
                <small>South Africa & Region</small>
            </div>
            <div class="payment-method" onclick="selectPayment('stripe')">
                <div class="payment-icon">
                    <i class="fab fa-stripe"></i>
                </div>
                <h4>Stripe</h4>
                <small>Global Payments</small>
            </div>
            <div class="payment-method" onclick="selectPayment('eft')">
                <div class="payment-icon">
                    <i class="fas fa-university"></i>
                </div>
                <h4>Bank EFT</h4>
                <small>Direct Transfer</small>
            </div>
        </div>
        
        <button class="checkout-button" onclick="proceedToCheckout()">
            <i class="fas fa-lock"></i> Secure Checkout
        </button>
    </div>
    
    <div class="overlay" id="overlay"></div>

    <!-- Admin Login Button -->
    <div class="admin-login" onclick="openAdminLogin()">
        <i class="fas fa-cog"></i> Owner Portal
    </div>

    <script src="scripts/main.js"></script>
    <script src="scripts/payment.js"></script>
</body>
</html>
